<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeeContactActivity">

    <TextView
            android:text="Priority"
            android:layout_width="225dp"
            android:layout_height="56dp"
            android:id="@+id/see_priority"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/see_mail"/>
    <TextView
            android:text="Name"
            android:layout_width="225dp"
            android:layout_height="56dp"
            android:id="@+id/see_name"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>
    <TextView
            android:text="Phone"
            android:layout_width="225dp"
            android:layout_height="56dp"
            android:id="@+id/see_phone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/see_name"/>
    <TextView
            android:text="Mail"
            android:layout_width="225dp"
            android:layout_height="56dp"
            android:id="@+id/see_mail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/see_phone"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>